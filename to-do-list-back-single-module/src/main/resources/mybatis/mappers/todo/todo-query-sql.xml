<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace = "com.jiinkim.todolist.todo.dao.TodoDao">
    <resultMap type="todoQueryDto" id="todoQueryMap">
        <id column="todo_id" property = "todoId"/>
        <result column="todo_title" property="todoTitle"/>
        <result column="todo_content" property="todoContent"/>
        <result column="todo_at" property="todoAt"/>
        <result column="todo_done" property="todoDone"/>
        <result column="user_id" property="userId"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="findAllByUserIdWithPaging" parameterType="todoListGetRequest" resultMap="todoQueryMap">
        WITH filtered_todo AS (
            SELECT rownum as rn, todo_id,todo_title, todo_content, todo_at, todo_done, user_id, created_at, updated_at
            FROM todo
            WHERE todo_at <![CDATA[ >= ]]> CURRENT_DATE
              AND user_id = #{userId}
              AND rownum <![CDATA[ <= ]]> #{endRow}
              AND status = #{status}
        )
        SELECT todo_id,todo_title, todo_content, todo_at, todo_done, user_id, created_at, updated_at
        FROM filtered_todo
        WHERE rn <![CDATA[ >= ]]>  #{startRow}
    </select>


</mapper>