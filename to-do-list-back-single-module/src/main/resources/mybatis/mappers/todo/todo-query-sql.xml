<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace = "com.jiinkim.todolist.todo.dao.TodoDao">
    <resultMap type="todoQueryDto" id="todoQueryMap">
        <id column="todo_id" property = "todoId"/>
        <result column="todo_title" property="todoTitle"/>
        <result column="todo_content" property="todoContent"/>
        <result column="todo_at" property="todoAt"/>
        <result column="todo_done" property="todoDone"/>
        <result column="user_id" property="userId"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="findAllByUserIdWithPaging" parameterType="todoListGetParams" resultMap="todoQueryMap">

        SELECT
        todo_id, todo_title, todo_content, todo_at, todo_done, user_id, created_at, updated_at
        FROM
        todo
        WHERE
        todo_at >= TO_CHAR(SYSDATE,'YY/MM/DD')
        AND user_id = #{userId}
        AND status = #{status}
        ORDER BY todo_at
        <if test='"N".equals(isUpdate)'>
            OFFSET #{offset} ROWS FETCH NEXT #{nextRow} ROWS ONLY
        </if>
        <if test='"Y".equals(isUpdate)'>
            OFFSET 0 ROWS FETCH NEXT #{endRow} ROWS ONLY
        </if>


    </select>

    <select id="findByTodoId" resultMap="todoQueryMap">
        SELECT
            todo_id, todo_title, todo_content, todo_at, todo_done, user_id, created_at, updated_at
        FROM
            todo
        WHERE
            todo_id = #{param1} AND status = #{param2}
    </select>

    <select id=" findAllByTodoIdAndUserId">
        SELECT
            user_id
        FROM
            todo
        WHERE
            todo_id IN (
                <foreach collection="deletedTodoIdList" item="todoId" separator=",">
                    #{todoId}
                </foreach>
                )
    </select>


</mapper>







